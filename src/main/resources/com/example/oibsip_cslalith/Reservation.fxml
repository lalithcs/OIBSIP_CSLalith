<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.control.Label?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.oibsip_cslalith.ReservationController">
    <children>
        <TextField layoutX="237.0" layoutY="50.0" promptText="Name" fx:id="nameField" />
        <TextField layoutX="237.0" layoutY="100.0" promptText="Train Number" fx:id="trainNumberField"/>
        <Label layoutX="400.0" layoutY="100.0" fx:id="trainNameLabel" />
        <TextField layoutX="237.0" layoutY="150.0" promptText="Class" fx:id="classField"/>
        <DatePicker layoutX="237.0" layoutY="200.0" promptText="Date of Journey" fx:id="dateField"/>
        <TextField layoutX="237.0" layoutY="250.0" promptText="Source" fx:id="sourceField"/>
        <TextField layoutX="237.0" layoutY="300.0" promptText="Destination" fx:id="destinationField"/>



        <Button layoutX="271.0" layoutY="325.0" text="Submit" onAction="#handleReservation" fx:id="reserveButton" />
        <Button layoutX="271.0" layoutY="350.0" text="Submit" onAction="#handleCancellation" fx:id="cancelButton" />
    </children>
</AnchorPane>
